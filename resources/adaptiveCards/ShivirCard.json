        {
            "type": "Action.ShowCard",
            "title": "Eligibility Criteria",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "Everyone can apply for this Shivir",
                        "wrap": "true"
                    }
                ]
            }
        },
        {
            "type": "Action.ShowCard",
            "title": "Fees for Shivir",
            "card": {
                "type": "AdaptiveCard",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "The donation for Shivir is Rs. 100000/-",
                        "wrap": "true"
                    }
                ]
            }
        }
